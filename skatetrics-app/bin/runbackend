#!/bin/bash
# backend run script

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail


if [ ! -f "var/backend.sqlite3" ]; then
  echo "Error: can't find database var/backend.sqlite3" >&2
  exit 1
fi

flask --app backend --debug run --host 0.0.0.0 --port 8000
